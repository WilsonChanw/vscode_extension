{
  "name": "sv-statemachine-generator",
  "displayName": "SystemVerilog State Machine Generator",
  "description": "Generate state machines for SystemVerilog based on selected text",
  "version": "2.1.0",
  "publisher": "wilsonch001",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onCommand:sv-statemachine.generate-fast",
    "onCommand:sv-statemachine.generate-advanced"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sv-statemachine.generate-fast",
        "title": "Generate Fast State Machine",
        "category": "SystemVerilog",
        "description": "Generate a state machine with sequential state transitions"
      },
      {
        "command": "sv-statemachine.generate-advanced",
        "title": "Generate Advanced State Machine",
        "category": "SystemVerilog",
        "description": "Generate a state machine with custom state transitions"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sv-statemachine.generate-fast",
          "when": "editorLangId == systemverilog"
        },
        {
          "command": "sv-statemachine.generate-advanced",
          "when": "editorLangId == systemverilog"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --minify --platform=node --outfile=out/extension.js --external:vscode --format=cjs --target=node18 --sourcemap",
    "watch": "esbuild src/extension.ts --bundle --minify --platform=node --outfile=out/extension.js --external:vscode --format=cjs --target=node18 --sourcemap --watch",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.2",
    "typescript": "^5.2.2"
  }
}